.container {height: 100%;} 
image{ display: block}
.clearfix::after{ content: ''; clear: both; display:block;}
.pull-left{ float: left;}
.pull-right{ float: right;}
.text-left{ text-align: left}
.text-center{ text-align: center}
.text-right{ text-align: right}

.colorBlack{ color:#000}
.colorGrey{ color:#8b8b8b}
.colorWhite{ color:#ffffff}

.font20{ font-size:20px}
.font18{ font-size: 18px;}
.font16{ font-size: 16px;}
.font15{ font-size: 15px  }
.font14{ font-size: 14px;}
.font12{ font-size: 12px;}

.fontWeight{ font-weight: bold}


.flexbox{text-align: center;display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex;}
.flexbox view{-webkit-box-flex: 1;-webkit-flex: 1;-ms-flex: 1;flex: 1;}
.line1Ellipsis{overflow: hidden;white-space: nowrap;text-overflow:ellipsis;}
.line2Ellipsis{overflow:hidden; text-overflow:ellipsis;display:-webkit-box; -webkit-box-orient:vertical;-webkit-line-clamp:2;white-space: initial; }

.lineGrey_top{ border-top: 1px solid #d8d8d8}
